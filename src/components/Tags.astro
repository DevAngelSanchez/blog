---
import { getCollection } from "astro:content";
import Tag from "./Tag.astro";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())]; // Crea un array de un solo nivel con valores unicos
---

<div class="tags">
  {tags ? tags.map((tag) => <Tag tag={tag} />) : <slot />}
</div>

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
  }
</style>
